<?xml version="1.0" encoding="UTF-8"?>
<!--
This is a custom order for Mae who doesn't eat cheese but will add it anyway
to satisfy the requirements.  She wants five toppings.
-->

<!DOCTYPE order SYSTEM 'bonanza.dtd'>

<order type="delivery">
    <customer>Mae</customer>
    <burger>
        <patty type="beef"/>
        <cheeses top="swiss"/>
        <topping type="lettuce"/>
        <topping type="shrooms"/>
        <topping type="salsa"/>
        <topping type="avocado"/>
        <topping type="bacon"/>
        <sauce type="fksauce"/>
        <sauce type="mayo"/>
    </burger>
    <burger>
        <patty type="pork"/>
        <cheeses top="gouda"/>
        <topping type="lettuce"/>
        <topping type="dill"/>
        <topping type="tomato"/>
        <sauce type="ketchup"/>
        <sauce type="mustard"/>
        <instructions>Please add peanut butter</instructions>
    </burger>
    <delivery>
        3700 Willingdon Avenue, Burnaby
    </delivery>
    <special>
        Bring to building SE12 Room 319
    </special>
</order>
